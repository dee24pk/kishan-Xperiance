<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="input" parent="Theme.AppCompat">
        <item name="android:width">300dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Button" parent="Theme.AppCompat">
        <item name="android:background">@drawable/shape</item>
        <item name="android:textSize">@dimen/signup_button_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textColor">@color/SignupTxt</item>
    </style>

    <style name="Button2" parent="Theme.AppCompat">
        <item name="android:background">@drawable/shape</item>
        <item name="android:textSize">@dimen/signup_button_text</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="BStxt" parent="Theme.AppCompat">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">6dp</item>
        <item name="android:textColor">@color/BStxt</item>
    </style>

    <style name="userProfiletxt" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/arbutus_slab</item>
    </style>

    <style name="circleButton" parent="Theme.AppCompat">
        <item name="android:background">@drawable/circlebutton</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
